<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hs.s3.notice.NoticeDAO">
	<select id="getTotalCount" parameterType="Pager" resultType="java.lang.Long">
		select count(num) from notice where
		<choose>
			<when test="kind=='writer'">
				writer
			</when>
			<when test="kind=='contents'">
				contents
			</when>
			<otherwise>
				title
			</otherwise>
		</choose>
		like '%' || #{search} || '%' and num>0
	</select>
	<select id="getList" parameterType="Pager" resultType="NoticeDTO">
		select * from (
			select rownum R, N.* from (
				select * from NOTICE where
				<choose>
					<when test="kind=='writer'">
						writer
					</when>
					<when test="kind=='contents'">
						contents
					</when>
					<otherwise>
						title
					</otherwise>
				</choose>
				<!-- <if test="kind=='writer'">
					writer
				</if>
				<if test="kind=='contents'">
					contents
				</if>
				<if test="kind=='title'">
					where
				</if> -->
				 like '%' || #{search} || '%' and num>0 order by num desc
			) N
		)
		where R between #{startRow} and #{lastRow}
	</select>
	<select id="getSelect" parameterType="NoticeDTO"
		resultType="NoticeDTO">
		select * from NOTICE where num=#{num}
	</select>
	<insert id="setInsert" parameterType="NoticeDTO">
		insert into NOTICE
		values(notice_seq.nextval,
		#{title}, #{writer}, sysdate, 0,
		#{contents})
	</insert>
	<delete id="setDelete" parameterType="NoticeDTO">
		delete from NOTICE where
		num=#{num}
	</delete>
	<update id="setUpdate" parameterType="NoticeDTO">
		update NOTICE set
		title=#{title}, writer=#{writer}, contents=#{contents} where
		num=#{num}
	</update>
	<update id="setHitUpdate" parameterType="NoticeDTO">
		update NOTICE set
		hit=#{hit}+1 where num=#{num}
	</update>
</mapper>